        <AuthorizeView Roles="Admin, TeamPlayer, TeamCaptain, TeamOwner">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Pages/Games">
                        <span class="oi oi-people" aria-hidden="true"></span> Games
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>

        <AuthorizeView Roles="Admin">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" style="cursor:pointer;" @onclick="() => expandSubMenu = !expandSubMenu">
                        @if(expandSubMenu)
                        {
                            <span class="oi oi-lock-unlocked" aria-hidden="true"></span>                            
                        }
                        else
                        {
                            <span class="oi oi-lock-locked" aria-hidden="true"></span>
                        }Admin 
                    </NavLink>
                    @if (expandSubMenu)
                    {
                        <ul class="nav flex-column">
                            <li class="nav-item px-3">
                                <NavLink class="nav-link" href="admin">
                                    <span class="oi oi-people" aria-hidden="true"></span> User Management
                                </NavLink>
                            </li>
                        </ul>
                    }
                </div>
            </Authorized>
        </AuthorizeView>

